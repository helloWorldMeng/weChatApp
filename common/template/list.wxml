<template name='list-template'>
  <scroll-view scroll-y='true' style='height: 100%' lower-threshould='200' bindscrolltolower='lower'>
    <view class='item' wx:for='{{list}}' wx:key='{{index}}' data-detail='{{item}}' data-id='{{item.id}}' bindtap='tap'>
      <image src='{{item.cover}}'></image>
      <text>{{item.title + '/' + item.rate}}</text>
    </view>
    <view class='loading' wx:if='{{loading}}'>
      <image mode='widthFix' src='../../../assets/loading/loading.gif'></image>
    </view>
  </scroll-view>
</template>